{
  // Editor
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode", // set default formatter
  "editor.fontSize": 18,
  "editor.fontLigatures": true,
  "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace,\"Apple Color Emoji\", \"Segoe UI Emoji\", \"Segoe UI Symbol\"",
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": false,
  "editor.suggest.showSnippets": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false, // cho phép quick suggestion trong snippet
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "editor.lightbulb.enabled": true,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 120,
  "editor.letterSpacing": 0.5,
  "editor.suggest.preview": true,
  "editor.bracketPairColorization.enabled": true,

  // typescript
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterTypes.enabled": true,

  // javascript
  "javascript.inlayHints.parameterNames.enabled": "all",
  "js/ts.implicitProjectConfig.checkJs": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  // Window
  "window.zoomLevel": -1,

  // Auto save
  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 3000,

  // Explorer
  "explorer.compactFolders": false,
  "breadcrumbs.enabled": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "node_modules/": true
  },

  // Zen mode
  "zenMode.hideLineNumbers": false,

  // Workbench
  // Theme
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "statusBar.background": "#303030"
  },
  "workbench.activityBar.visible": true,
  "workbench.editor.showTabs": false,
  "workbench.editor.enablePreview": false,
  // highlight matching tag
  "highlight-matching-tag.styles": {
    "opening": {
      "full": {
        "highlight": "#303030"
      }
    },
    "closing": {
      "full": {
        "highlight": "#303030"
      }
    }
  },

  // Html
  "html.autoClosingTags": false,

  // Vim
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.replaceWithRegister": true,
  "vim.camelCaseMotion.enable": true,
  "vim.changeWordIncludesWhitespace": true,
  "vim.useSystemClipboard": true,
  "vim.smartRelativeLine": true,
  "vim.highlightedyank.enable": true,
  "vim.mouseSelectionGoesIntoVisualMode": false,
  "vim.foldfix": true,
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-b>": false,
    "<C-c>": false,
    "<C-v>": false,
    "<C-d>": false,
    "<C-y>": false
  },
  // turbo Console Log
  "turboConsoleLog.addSemicolonInTheEnd": true,
  "turboConsoleLog.quote": "'",

  // Prettier
  "prettier.requireConfig": true, // bắt buộc phải có file prettierrc
  // Stylelint

  "stylelint.enable": true,
  "css.validate": false,
  "scss.validate": false,

  // Eslint
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  }
}
